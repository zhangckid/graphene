#!$(PAL)

loader.preload = file:$(SHIMPATH)
loader.exec = file:$(JAVA_HOME)/bin/java
loader.execname = java
loader.env.LD_LIBRARY_PATH = /jre/lib/amd64:/jre/lib/amd64/jli:/graphene:/usr/lib/x86_64-linux-gnu:/lib/x86_64-linux-gnu
loader.env.PATH = /jre/bin:/bin:/usr/bin
loader.debug_type = $(DEBUGTYPE)

fs.mount.graphene.type = chroot
fs.mount.graphene.path = /graphene
fs.mount.graphene.uri = file:$(LIBCDIR)

fs.mount.host1.type = chroot
fs.mount.host1.path = /usr/lib/x86_64-linux-gnu
fs.mount.host1.uri = file:/usr/lib/x86_64-linux-gnu

fs.mount.host2.type = chroot
fs.mount.host2.path = /lib/x86_64-linux-gnu
fs.mount.host2.uri = file:/lib/x86_64-linux-gnu

fs.mount.jre.type = chroot
fs.mount.jre.path = /jre
fs.mount.jre.uri = file:$(JAVA_HOME)

fs.mount.tmp.type = chroot
fs.mount.tmp.path = /tmp
fs.mount.tmp.uri = file:/tmp

fs.mount.nsswitch.type = chroot
fs.mount.nsswitch.path = /etc/nsswitch.conf
fs.mount.nsswitch.uri = file:nsswitch.conf

glibc.heap_size = 16M
sys.stack.size = 4M
sys.brk.size = 64M
sgx.enclave_size = 8G
sgx.thread_num = 64

sgx.search_trusted_libs = file:$(LIBCDIR),file:$(JAVA_HOME)/lib/amd64,file:$(JAVA_HOME)/lib/amd64/server,file:$(JAVA_HOME)/lib/amd64/jli,/lib/x86_64-linux-gnu,file:/usr/lib/x86_64-linux-gnu

sgx.trusted_libs.librt = file:$(LIBCDIR)/librt.so.1
sgx.trusted_libs.libjvm = file:$(JAVA_HOME)/lib/amd64/server/libjvm.so
sgx.trusted_libs.libjava = file:$(JAVA_HOME)/lib/amd64/libjava.so
sgx.trusted_libs.libjli = file:$(JAVA_HOME)/lib/amd64/jli/libjli.so
sgx.trusted_libs.libzip = file:$(JAVA_HOME)/lib/amd64/libzip.so
sgx.trusted_libs.libnet = file:$(JAVA_HOME)/lib/amd64/libnet.so
sgx.trusted_libs.libnio = file:$(JAVA_HOME)/lib/amd64/libnio.so
sgx.trusted_libs.libverify = file:$(JAVA_HOME)/lib/amd64/libverify.so
sgx.trusted_libs.libsunec = file:$(JAVA_HOME)/lib/amd64/libsunec.so
sgx.trusted_libs.libmanagement = file:$(JAVA_HOME)/lib/amd64/libmanagement.so
sgx.trusted_libs.libnss = file:$(LIBCDIR)/libnss_files.so.2
sgx.trusted_libs.libz = file:/lib/x86_64-linux-gnu/libz.so.1

sgx.trusted_files.jvmcfg = file:$(JAVA_HOME)/lib/amd64/jvm.cfg
sgx.trusted_files.meta = file:$(JAVA_HOME)/lib/meta-index
sgx.trusted_files.tzdb = file:$(JAVA_HOME)/lib/tzdb.dat
sgx.trusted_files.currency = file:$(JAVA_HOME)/lib/currency.data
sgx.trusted_files.rt = file:$(JAVA_HOME)/lib/rt.jar
sgx.trusted_files.jce = file:$(JAVA_HOME)/lib/jce.jar
sgx.trusted_files.jsse = file:$(JAVA_HOME)/lib/jsse.jar
sgx.trusted_files.resources = file:$(JAVA_HOME)/lib/resources.jar
sgx.trusted_files.nsswitch = file:nsswitch.conf

sgx.allowed_files.ext = file:$(JAVA_HOME)/lib/ext
sgx.allowed_files.security = file:$(JAVA_HOME)/lib/security
sgx.allowed_files.classes = file:classes
sgx.allowed_files.tmp = file:/tmp
